<% unless @concert.new_record? %>
  <div class="field" style='width:666px'>
    <span class='second_links'>
      <%= link_to "Карусель, #{Carousel::NUMBER[number]} (#{@concert.crsl(number).size})", concert_carousels_path(@concert, number: number), class: :open %>
    </span>
    <br />
    <% @concert.crsl(number).each do |c| %>
      <%= image_tag c.url(:sm) if c.url %>
    <% end %>
  </div>
<% end %>