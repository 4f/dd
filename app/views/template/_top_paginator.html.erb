  <%= link_to @center.next.year, *(@center.next==@concert ? ["#", class: :active] : send( in_path, @center.next)) %>
<% end %>

<%= content_tag :li, class: :next do %>
  <%= link_to '', send( in_path, @concert, center: @center.next.id), remote: true %>
<% end %>