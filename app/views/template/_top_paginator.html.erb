
<%= content_tag :li, class: :prev do %>
  <%= link_to '', send( in_path, @concert, center: @center.prev.id), remote: true %>
<% end %>

<%= content_tag :li, class: :year do %>
  <%= link_to @center.prev.year, *(@center.prev==@concert ? ["#", class: :active] : send( in_path, @center.prev)) %>
<% end %>

<%= content_tag :li, class: :year do %>
  <%= link_to @center.year, *(@center==@concert ? ["#", class: :active] : send( in_path, @center)) %>
<% end %>

