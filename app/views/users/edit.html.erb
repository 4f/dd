<% content_for :lnks2 do %>
  | <%= link_to 'К списку', :users %>
  | <%= link_to_function 'Записать', "$('input[name=commit]').first().click()" %>
  | <%= link_to 'Новый', :new_user %>
  | <%= link_to '0', :root, title: 'Просмотр' %>
  |
<% end %>
<%= h1andcontent "Редактирование #{@user.name}" %>

<div class="row">
  <div>
    <%= render partial: 'template/error', object: @user %>

    <%= form_for(@user) do |f| %>
      <div class="field">
        <%= f.label :name, "Имя" %>
        <%= f.text_field :name %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :email, "Еmаil" %>
        <%= f.text_field :email %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :password, "Пароль" %>
        <%= f.password_field :password %>
      </div>
      <br/>
      <div class="field">
        <%= f.label :password_confirmation, "Повторите" %>
        <%= f.password_field :password_confirmation %>
      </div>
      <br/>
      <br/>
      <%= f.submit "Сохранить"%>
    <% end %>
  </div>
</div>

    <style>
    label{
      width: 111px;
      display: inline-block;
    }
    </Style>