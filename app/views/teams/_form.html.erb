
<%= form_for(@team, html: {multipart: true}) do |f| %>
  <%= render partial: 'template/error', object: @team %>

  <div class="field">
    <%= f.label :name, "Имя"%>
    <%= f.text_field :name, style: "width:323px"  %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :remark, "Примечание" %><br />
    <%= f.text_area :remark, rows: 2, cols: 45 %>
  </div>
  <br/>
  <div>
    <%= f.label :foto, "Фото" %>
    <%= f.file_field :foto %>
    <br/>
    <%= image_tag @team.foto.url if @team.foto.exists? %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit 'Сохранить' %>
  </div>
<% end %>
